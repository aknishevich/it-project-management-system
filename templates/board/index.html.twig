{% extends 'base.html.twig' %}

{% block title %}Boards available to you{% endblock %}

{% block body %}
    <h1>Boards available to you</h1>

    <div class="container">
        <div class="row">
            {% for board in boards %}
                <div class="col-sm">
                    <div class="card mb-3" style="width: 18rem;">
                        <a href="{{ path('board_show', {'id': board.id}) }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ board.name }}</h5>
                                <p class="card-text">{{ board.description }}</p>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('board_new') }}">Create new</a>
{% endblock %}
