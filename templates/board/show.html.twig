{% extends 'base.html.twig' %}

{% block title %}Board{% endblock %}

{% block body %}
    <h1>{{ board.name }}</h1>

    <div class="float-right">
        {{ include('board/_delete_form.html.twig') }}
    </div>
    <a href="{{ path('board_edit', {'id': board.id}) }}" class="float-right">
        <i class="fas fa-edit"></i>
    </a>

    <span>Author - <strong>{{ board.author }}</strong></span>

    <hr>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#tasks">Tasks</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#info">Main info</a>
        </li>
    </ul>
    <div class="tab-content">
        <div id="tasks" class="container tab-pane active"><br>
            <div class="container">
                <div class="row">
                    <a href="{{ path('column_new', {'board': board.id}) }}" class="mb-3">Add column<i class="fas fa-plus"></i></a>
                    <div class="col-12">
                        {{ include('board/tasks/tasks_table.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
        <div id="info" class="container tab-pane fade"><br>
            <div class="container">
                <div class="row">
                    <div class="col-8">
                        <p>{{ board.description }}</p>
                    </div>
                    {{ include('board/members/members_block.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <hr>

    <a href="{{ path('board_index') }}">back to list</a>

{% endblock %}
