{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ project.author }}</td>
            </tr>
            <tr>
                <th>CreatingDate</th>
                <td>{{ project.creatingDate ? project.creatingDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Members</th>
                <td>
                    {% for member in project.members %}
                        <span>{{ member|filter_name }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Tasks</th>
                <td>{{ project.tasks ? project.tasks|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('project_list') }}">back to list</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
