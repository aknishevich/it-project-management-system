{% extends 'base.html.twig' %}

{% block title %}Your logged time history{% endblock %}


{% block body %}
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Task</th>
                <th>Logged time</th>
            </tr>
        </thead>
        <tbody>
            {% for time in loggedTime %}
                <tr>
                    <td>{{ time.date|date("m/d/Y") }}</td>
                    <td>{{ time.task }}</td>
                    <td>{{ time.time }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}